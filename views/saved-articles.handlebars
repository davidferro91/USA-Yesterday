<main class="container">
  <div class="row">
    <div class="col s12">
      <div class="card grey lighten-2 z-depth-5">
        <div class="card-content">
          <h3><i class="material-icons medium hide-on-small-only">brightness_3</i>USA Yesterday Saved Articles</h3>
        </div>
      </div>
    </div>
  </div>
  <br>

  <div class="row">
    {{#each Article}}
    <div class="col s12 m6 l4">
      <div class="card">
        <div class="card-image image-holder">
          <img class="responsive-img" src="{{imageUrl}}" alt="{{title}}">
        </div>
        <div class="card-content">
          <span class="card-title black-text">{{title}}</span>
          <blockquote>{{summary}}</blockquote>
          <button class="waves-effect waves-light btn orange darken-3 white-text add-note modal-trigger"
            href="#note-modal" data-id={{_id}}>Add
            Note</button>
          <a class="waves-effect waves-light btn orange darken-3 white-text read-note" href="/articles/{{_id}}"
            data-id={{_id}}>Read Notes</a>
        </div>
        <div class="card-action">
          <button class="waves-effect waves-light btn orange darken-3 white-text save-button" data-id={{_id}}>Unsave
            Article</button>
          <button class="waves-effect waves-light btn orange darken-3" href="{{link}}" target="_blank"
            class="white-text">Read Article</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div id="note-modal" class="modal">
    <div class="modal-content">
      <h4 id="modal-id"></h4>
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <input id="note-title" type="text">
              <label for="note-title">Note Title:</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="note-body" type="text">
              <label for="note-body">Note Body:</label>
            </div>
          </div>
          <button class="btn waves-effect waves-light modal-close" id="modal-submit" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </form>
      </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>
</main>

